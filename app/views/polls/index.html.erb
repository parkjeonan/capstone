<%# app/views/polls/index.html.erb %>
<%= @que %>
		<%= @que %>
    <div class="container-fluid">
       <div class="row">  
		  <div class="col-5 offset-1">
          <p id="notice"><%= notice %></p>
          <h1>Polls</h1>
          <table id='poll-table' class="table table-hover">
            <thead class="thead-light">
              <tr style="border:black solid">
                <th>닉네임         </th>
                <th>1번 질문</th>
                <th colspan="3"></th>
				  <th>2번 질문</th>
				  <th colspan="4"></th>
              </tr>
            </thead>

          </table>
        </div>

		   
		   
        <div class='col-11 offset-1 col-sm-4'>
          <h3>설문조사</h3>
          <%= render 'form', poll: @poll %>
        </div>
      </div>
		
		<div class="row">
        <div class="col-6">
          <%= pie_chart [["1", Poll.where(laptop: "1").count], ["2", Poll.where(laptop: "2").count],["3", Poll.where(laptop: "3").count], ["4", Poll.where(laptop: "4").count],  ["5", Poll.where(laptop: "5").count]], id:'polls'%> 
        </div>
      </div>
		
    </div>
